<div class="container">
  <h1>My Playlists</h1>
    <%= link_to(new_playlist_path, class:'btn btn-add-playlist') do %>
    <i class="fas fa-plus-square"></i>
    <% end %>
  <% @playlists.each do |playlist| %>
    <div class="playlist">
      <div class="play-name">
        <%= link_to playlist_path(playlist) do %>
          <%= playlist.name %>
        <% end %>
      </div>
      <div class="play-btns">
        <%= link_to edit_playlist_path(playlist), class:'edit' do %>
          <i class="fas fa-edit"></i>
        <% end %>
        <%= link_to playlist_path(playlist),
                          method: :delete,
                          data: { confirm: "Are you sure?" }, class:'remove' do %>
                          <i class="fas fa-trash-alt"></i>
                          <% end %>
      </div>
    </div>
  <% end %>
</div>
